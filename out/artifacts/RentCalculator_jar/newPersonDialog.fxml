<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="rentui.NewPersonController">
    <header>

    </header>

    <content>
        <GridPane>
            <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Room: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ChoiceBox fx:id="roomChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="1">
            </ChoiceBox>
            <Label text="Essentials Bought: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="essentialsBoughtField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label text="Rent portion: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="rentPortionField" disable="true"  GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="Utilities portion: " GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="utilPortionField" disable="true"  GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Label text="Prorate" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <CheckBox fx:id="prorateCheckbox" onAction="#handleProrate"
                      GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        </GridPane>
    </content>

</DialogPane>
