<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="rentui.NewBill"
            prefHeight="400.0" prefWidth="600.0">
    <header>

    </header>

    <content>
        <GridPane>
            <Label text="Name of bill: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <RadioButton fx:id="radioPerson" text="An individual pays this bill" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <RadioButton fx:id="radioCollected" text="This bill is collected and stored in the house account" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Label text="Person responsible for: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <ChoiceBox fx:id="personChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="3">
            </ChoiceBox>
            <Label text = "Amount due this month: " GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        </GridPane>
    </content>

</DialogPane>
